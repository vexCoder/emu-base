{
    "extends": "ts-config/tsconfig.react.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "paths": {
            "@components/*": ["./src/components/*"],
            "@providers/*": ["./src/providers/*"],
            "@utils/*": ["./src/utils/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@api/*": ["./src/api/*"],
            "@elements/*": ["./src/elements/*"],
            "@containers/*": ["./src/containers/*"],
            "@css/*": ["./src/css/*"],
            "@root/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.tsx", "src/**/*.ts", "node_modules/types/*.ts"],
    "exclude": [ "tailwind.config.js" ]
}